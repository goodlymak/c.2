    #include <stdio.h>
    void main()
        {
        int i;
        int n;
        int m;
        int sum=0;
        printf("Enter numbers: "); 
        scanf("%d",&n);
        int rev=0;
        for(i=1;n!=0;i++)
            {
            m=n%10;
            sum=sum+m;
            n=n/10;
            rev=(rev*10)+m;
            }
            printf("sum of number is:%d",sum);
            printf("\nrevers:%d",rev);
        }

