#include <stdio.h>
void main()
    {
    int i;
    int n;
    int modules;
    int sum=0;
    printf("Enter number: "); 
    scanf("%d",&n);
    int rev=0;
    
    
        for(i=1;n!=0;i++)
        {
           modules= n%10 ;
           sum=sum+modules;
           n=n/10;
           rev=(rev*10)+modules;
        }
         printf("sum of digit is=%d",sum); 
          printf("\nrevers is=%d",rev); 
       
    }
